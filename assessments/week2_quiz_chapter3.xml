<!-- Q1: Function Definition Syntax -->
<question type="multichoice">
  <n>
    <text>Q1: Function Definition Syntax</text>
  </n>
  <questiontext format="html">
    <text><![CDATA[<p>Which of the following correctly defines a function named <code>greet</code> that prints "Hello"?</p>]]></text>
  </questiontext>
  <defaultgrade>1</defaultgrade>
  <penalty>0.3333333</penalty>
  <single>true</single>
  <shuffleanswers>true</shuffleanswers>
  <answer fraction="100" format="html">
    <text><![CDATA[<pre>def greet():
    print("Hello")</pre>]]></text>
    <feedback format="html">
      <text>Correct! Functions are defined with def, followed by the name, parentheses, a colon, and an indented body.</text>
    </feedback>
  </answer>
  <answer fraction="0" format="html">
    <text><![CDATA[<pre>function greet():
    print("Hello")</pre>]]></text>
    <feedback format="html">
      <text>Incorrect. Python uses "def" not "function" to define functions.</text>
    </feedback>
  </answer>
  <answer fraction="0" format="html">
    <text><![CDATA[<pre>def greet()
    print("Hello")</pre>]]></text>
    <feedback format="html">
      <text>Incorrect. Missing the colon after the parentheses.</text>
    </feedback>
  </answer>
  <answer fraction="0" format="html">
    <text><![CDATA[<pre>def greet:
    print("Hello")</pre>]]></text>
    <feedback format="html">
      <text>Incorrect. Missing the parentheses after the function name.</text>
    </feedback>
  </answer>
</question>

